<body>

<header>Habits</header>
<main id="app"></main>

<div class="toolbar">
  <button onclick="addHabit()">Nuevo hábito</button>
</div>

<script>
/* ===== DATA ===== */
const KEY="habits-v3";
let data=JSON.parse(localStorage.getItem(KEY))||{habits:[]};
const save=()=>localStorage.setItem(KEY,JSON.stringify(data));

/* ===== HABITS ===== */
function addHabit(){
  const name=prompt("Nombre del hábito");
  if(!name)return;
  data.habits.push({id:Date.now(),name,records:{}});
  save();render();
}

/* ===== MODAL ===== */
function openEditor(habit,date){
  const current=habit.records[date]||0;
  const modal=document.createElement("div");
  modal.className="modal";
  modal.innerHTML=`
    <div class="modal-content">
      <h3>${habit.name}<br><small>${date}</small></h3>
      <button onclick="setValue(${habit.id},'${date}',${current+1})">+1</button>
      <button onclick="setValue(${habit.id},'${date}',${Math.max(current-1,0)})">-1</button>
      <button onclick="manualEdit(${habit.id},'${date}',${current})">Editar</button>
      <button onclick="setValue(${habit.id},'${date}',0)">Borrar</button>
      <button onclick="closeModal()">Cerrar</button>
    </div>`;
  document.body.appendChild(modal);
}

function closeModal(){
  document.querySelector(".modal")?.remove();
}

function setValue(id,date,val){
  const h=data.habits.find(x=>x.id===id);
  if(val===0) delete h.records[date];
  else h.records[date]=val;
  save();closeModal();render();
}

function manualEdit(id,date,current){
  const v=parseInt(prompt("Valor",current),10);
  if(isNaN(v))return;
  setValue(id,date,v);
}

/* ===== GRID ===== */
function renderGrid(h){
  const today=new Date();
  let html="";
  for(let i=27;i>=0;i--){
    const d=new Date();
    d.setDate(today.getDate()-i);
    const key=d.toISOString().slice(0,10);
    const v=h.records[key]||0;
    let cls="cell";
    if(v===1)cls+=" low";
    else if(v<=3&&v>1)cls+=" mid";
    else if(v>3)cls+=" high";
    html+=`<div class="${cls}" onclick="openEditor(h,'${key}')">${v||""}</div>`;
  }
  return `<div class="grid">${html}</div>`;
}

/* ===== RENDER ===== */
function render(){
  const app=document.getElementById("app");
  app.innerHTML="";
  data.habits.forEach(h=>{
    const div=document.createElement("div");
    div.className="habit";
    div.innerHTML=`
      <div class="habit-title">${h.name}</div>
      ${renderGrid(h)}
    `;
    app.appendChild(div);
  });
}

render();

/* ===== SW ===== */
if("serviceWorker"in navigator){
  const sw=`self.addEventListener('fetch',e=>{e.respondWith(caches.open('h').then(c=>c.match(e.request).then(r=>r||fetch(e.request).then(res=>{c.put(e.request,res.clone());return res;}))))});`;
  navigator.serviceWorker.register(URL.createObjectURL(new Blob([sw],{type:"text/js"})));
}
</script>

</body>
</html>
